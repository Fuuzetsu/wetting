<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/drinkNameLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/drink_name_label"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="10dip"
        android:layout_weight="1"
        />

    <EditText
        android:id="@+id/newDrinkTextbox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_drink_hint"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/oldDrinkNameLabell"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/old_drink_name_label"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_weight="1"
        />

    <Spinner
        android:id="@+id/oldDrinkSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_weight="1"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1"
        >

        <CheckBox
            android:id="@+id/fizzyCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/fizzyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fizzy_text_label"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="3"
            />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSaveDrink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_save"
        android:layout_marginTop="10dip"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center|bottom"
        android:layout_weight="1"
        />

</LinearLayout>
